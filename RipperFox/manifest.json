{
  "manifest_version": 2,
  "name": "RipperFox",
  "version": "1.0",
  "description": "Right-click anywhere to download videos, GIFs, or images via your local RipperFox backend.",
  "permissions": [
    "contextMenus",
    "notifications",
    "storage",
    "tabs",
    "activeTab",
    "*://localhost/*",
    "*://127.0.0.1/*",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "RipperFox",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "ripperfox.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "ripperfox.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ripperfox@local",
      "strict_min_version": "91.0"
    }
  }
}
